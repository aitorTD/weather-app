---
import Layout from "../layouts/Layout.astro";
import Location from "../components/Location.astro";

const title = "Weather App | Consulta el clima en tiempo real";
---

<Layout {title}>
  <main class="min-h-screen bg-gradient-to-b from-green-50 to-white">
    <header class="py-8 px-4">
      <div class="container mx-auto max-w-4xl flex justify-center">
        <div class="flex items-center space-x-3 animate-fadeIn">
          <!-- Weather App Logo -->
          <div class="bg-gradient-to-br from-green-400 to-blue-500 p-3 rounded-full shadow-lg transform hover:scale-105 transition-transform duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
            </svg>
          </div>
          <div>
            <h1 class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-green-500 to-blue-600">
              Weather App
            </h1>
            <p class="text-sm text-gray-600">Consulta el clima en tiempo real</p>
          </div>
        </div>
      </div>
    </header>
    
    <section class="container mx-auto px-4 py-6 max-w-4xl">
      <div class="bg-white backdrop-blur-sm bg-opacity-70 rounded-2xl shadow-xl p-6 md:p-8 border border-green-100 transform hover:translate-y-[-5px] transition-all duration-300">
        <Location />
      </div>
      
      <!-- Decorative Elements -->
      <div class="absolute top-40 left-10 w-20 h-20 bg-gradient-to-r from-green-300 to-blue-300 rounded-full filter blur-3xl opacity-20 animate-pulse"></div>
      <div class="absolute bottom-20 right-10 w-32 h-32 bg-gradient-to-r from-blue-300 to-green-300 rounded-full filter blur-3xl opacity-20 animate-pulse delay-700"></div>
    </section>
  </main>
</Layout>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fadeIn {
    animation: fadeIn 0.8s ease-out forwards;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 0.2; transform: scale(1); }
    50% { opacity: 0.3; transform: scale(1.05); }
  }
  
  .animate-pulse {
    animation: pulse 4s ease-in-out infinite;
  }
  
  .delay-700 {
    animation-delay: 700ms;
  }
</style>